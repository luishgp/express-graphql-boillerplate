{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2015", "es2015.promise", "esnext.asynciterable"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["app/*"],
      "Config/*": ["config/*"]
    }
  },
  "include": [
    "app/**/*",
    "config/*",
    "bootstrap/*"
  ],
  "exclude": ["node_modules", "**/__test__/*"]
}
